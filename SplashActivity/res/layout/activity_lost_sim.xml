<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_bg3_style"
    android:orientation="vertical" >

    <include layout="@layout/title_1"/>

    <LinearLayout
        android:id="@+id/ll_add"
        style="@style/wm_parent_hw_content"
        android:background="@drawable/tab_bg_selector" >

        <ImageView
            style="@style/lv_icon_style"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/lv_text_style"
                android:text="@string/lost_sim_lable_add"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/black_line" />

    <View style="@style/black_shade_line" />

    <FrameLayout style="@style/wm_parent_hw_content" >

        <ListView
                 android:id="@+id/lv"
            style="@style/lv_style" >
        </ListView>

        <LinearLayout
            android:id="@+id/ll_empty"
            style="@style/wm_parent_hw_content"
            android:orientation="vertical"
            android:visibility="invisible" >
            
            <ImageView
                style="@style/wm_parent_hw_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:src="@drawable/white_empty" />

            <TextView
                style="@style/wm_parent_hw_content"
                android:gravity="center"
                android:text="@string/lost_sim_describe"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>