<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@id/dl_ll_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dd_bottom_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/dl_iv_foot_home"
            style="@style/iv_bottom_style"
            android:src="@drawable/dd_home_normal" />

        <ImageView
            android:id="@id/dl_iv_foot_search"
            style="@style/iv_bottom_style"
            android:src="@drawable/dd_search_normal" />

        <ImageView
            android:id="@id/dl_iv_foot_brand"
            style="@style/iv_bottom_style"
            android:src="@drawable/dd_brand_normal" />

        <ImageView
            android:id="@id/dl_iv_foot_shopping"
            style="@style/iv_bottom_style"
            android:src="@drawable/dd_shoppingcart_normal" />

        <ImageView
            android:id="@id/dl_iv_foot_mycount"
            style="@style/iv_bottom_style"
            android:src="@drawable/dd_mycount_normal" />
    </LinearLayout>

</LinearLayout>