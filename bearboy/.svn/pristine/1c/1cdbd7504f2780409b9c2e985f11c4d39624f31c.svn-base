<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/dd_cart_shopping_new_icon"
                android:text="您可以享受以下的优惠信息"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:background="@drawable/dd_cart_shopping_prom"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/prom_reduce"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:drawableLeft="@drawable/dd_shopping_cart_manzeng_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="满蹭···········"
                    android:textColor="#AA0000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/prom_increase"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:drawableLeft="@drawable/dd_shopping_cart_manjian_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="满减···········"
                    android:textColor="#AA0000"
                    android:textSize="16sp" />
            </LinearLayout>

</LinearLayout>
