<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/payment_address_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/payment_shape_rounded_rectangle"
        android:clickable="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/payment_address_text"
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:text="请添加您的收货地址" />

        <TextView
            android:id="@+id/payment_address"
            style="@style/style_16_507FD8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_address_text"
            android:layout_marginRight="20.0dip"
            android:text="xxxxxxxx" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dd_cart_shopping_arrows" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_payType_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/payment_shape_rounded_rectangle"
        android:clickable="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/payment_payHint_text"
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="支付方式：" />

        <TextView
            android:id="@+id/payment_pay_method"
            style="@style/style_16_507FD8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_payHint_text"
            android:layout_marginRight="20.0dip"
            android:text="货到付款" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dd_cart_shopping_arrows" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_sendTime_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/payment_shape_rounded_rectangle"
        android:clickable="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/payment_sendTimeHint_text"
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="送货时间：" />

        <TextView
            android:id="@+id/payment_sendTime"
            style="@style/style_16_507FD8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_sendTimeHint_text"
            android:layout_marginRight="20.0dip"
            android:text="周一到周五送货" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dd_cart_shopping_arrows" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_invoice_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/payment_shape_rounded_rectangle"
        android:clickable="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/payment_invoiceHint_text"
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="如需开发票，请填写抬头" />

        <TextView
            android:id="@+id/payment_invoice"
            style="@style/style_16_507FD8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_invoiceHint_text"
            android:layout_marginRight="20.0dip"
            android:text="无发票" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dd_cart_shopping_arrows" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_remark_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/payment_shape_rounded_rectangle"
        android:clickable="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/payment_remarkHint_text"
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="请留言：" />

        <EditText
            android:id="@+id/payment_remarkView_text"
            style="@style/style_16_507FD8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_remarkHint_text"
            android:layout_marginRight="20.0dip"
            android:background="@null"
            android:hint="请留言····" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dd_cart_shopping_arrows" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

        <TextView
            style="@style/style_18_000000_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="5.0sp"
            android:text="商品明细" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/dd_cart_shopping_new_icon"
        android:text="您可以享受以下的优惠信息"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:background="@drawable/dd_cart_shopping_prom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prom_reduce"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/dd_shopping_cart_manzeng_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="满增···········"
            android:textColor="#AA0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prom_increase"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/dd_shopping_cart_manjian_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="满减···········"
            android:textColor="#AA0000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>