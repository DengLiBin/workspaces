<?xml version="1.0" encoding="utf-8"?>
<!-- 底部导航 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bar_bg" >

    <!-- 购彩通用导航 -->

    <LinearLayout
        android:id="@+id/ii_bottom_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_home_selected"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgClassify"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_class_normal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_search_normal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgShoppingCar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_shopping_normal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_more_normal"
            android:clickable="true" />
    </LinearLayout>

    <TextView
        android:background="@drawable/number_bg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff" />

</RelativeLayout>