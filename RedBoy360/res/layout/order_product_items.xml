<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/shopcar_item_prodImage_rel"
        android:layout_width="76.0dip"
        android:layout_height="76.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/prod_pic"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shopcar_item_prod_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopcar_item_prodImage_rel"
        android:orientation="vertical"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip" >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:lines="2">		    
	        <TextView
	            android:id="@+id/order_prod_name"
	            style="@style/style_15_666666"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="marquee"
	            android:textColor="#000000"
	            android:text="商品名称："
	            />
	        <TextView
	            android:id="@+id/order_prod_name"
	             style="@style/style_15_C21513_BOLD"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="marquee"
	            android:paddingRight="15.0dip" 
	            android:singleLine="true"
	            />
		</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_13_9F9F9F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#000000"
                android:text="数量：" />

            <TextView
                android:id="@+id/order_prod_count"
                 style="@style/style_14_C21513_BOLD"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true" 
                android:text="1"/>
			
            <TextView
                style="@style/style_13_9F9F9F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"                
                android:singleLine="true"
                android:textColor="#000000"
                android:text="购买上限：" />

            <TextView
                android:id="@+id/order_prod_uplimit"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true" 
                android:text="10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_13_9F9F9F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#000000"
                android:text="价格：" />

            <TextView
                android:id="@+id/order_prod_price"
                 style="@style/style_14_C21513_BOLD"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="￥128"/>
			
            <TextView
                style="@style/style_13_9F9F9F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"                
                android:singleLine="true"
                android:textColor="#000000"
                android:text="是否赠品：" />

            <TextView
                android:id="@+id/order_prod_isgift"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true" 
                android:text="是"/>
        </LinearLayout>
    </LinearLayout>

    <TextView 
        android:layout_width="8dip"
        android:layout_height="13dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow"/>  

</RelativeLayout>