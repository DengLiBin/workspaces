<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >

    <LinearLayout
        android:id="@+id/imgIcon"
        android:layout_width="82.0dip"
        android:layout_height="100.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip" >

        <ImageView
            android:id="@+id/Clothes_imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!--  android:background="@drawable/border_80" -->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/relContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip" >
		<LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="horizontal"
		    >
        <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="商品名称:"/>
        <TextView
            android:id="@+id/Clothes_Name"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="海飞丝"
            />
        
		</LinearLayout>
        <LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="horizontal"
		    >
        <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="颜色:"/>
        <TextView
            android:id="@+id/Clothes_color"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="红色"
            />
        <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="60dip"
            android:text="尺码:"/>
        <TextView
            android:id="@+id/Clothes_measure"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="ML"
            />
        
		</LinearLayout>
        <LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="horizontal"
		    >
        <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="价格:"/>
        <TextView
            android:id="@+id/Clothes_Price"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="1234"
            />
        <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="60dip"
            android:text="数量:"/>
        <TextView
            android:id="@+id/Clothes_number"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="23"
            />
        
		</LinearLayout>
		<LinearLayout
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="horizontal"
		    >
		 <TextView
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="小计:"/>
        <TextView
            android:id="@+id/Clothes_totall_price"
            style="@style/style_15_666666_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="230"
            />
		</LinearLayout>
    </LinearLayout>

</LinearLayout>